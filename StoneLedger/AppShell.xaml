<Shell
    x:Class="StoneLedger.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:StoneLedger.Views">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate views:HomePage}"
        Route="home" />

    <ShellContent
        Title="Players"
        ContentTemplate="{DataTemplate views:Players.PlayerListPage}"
        Route="players" />

    <ShellContent Title="Player Detail" ContentTemplate="{DataTemplate views:Players.PlayerDetailPage}" Route="playerdetail" />

</Shell>
